<h1>Editer un gossip</h1>

<%= form_for @gossips, url: {action: "create"} do |f| %>
 <fieldset>
    <ul>
        <label for= "title" > Title:</label> <%= f.text_field :title %></br>

        <label for= "content">Gossip: </label><%= f.text_area :content, size: "20x10" %></br>
    </ul>
    <%= f.submit value="Send" %> 
    <a href="/gossips"><input type="button" value="Cancel"></a>

</fieldset>
<% end %>
